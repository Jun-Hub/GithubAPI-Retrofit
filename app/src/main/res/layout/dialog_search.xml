<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:text="@string/search"/>

    <EditText
        android:id="@+id/org_editText"
        android:inputType="text"
        android:maxLength="30"
        android:layout_below="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hint_org"
        android:autofillHints="@string/hint_org" />

    <EditText
        android:id="@+id/repo_editText"
        android:inputType="text"
        android:maxLength="30"
        android:layout_below="@+id/org_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hint_repo"
        android:autofillHints="@string/hint_repo" />

</RelativeLayout>